<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h2>Recently Updated</h2>
      <% @products.updatedNew.each do |product| %>
        <div class="productDiv">
          <%= product.name%> <%= link_to "click for more details", product_path(product) %>
        </div>
      <% end %>
    </div>

    <div class="col-lg-4">
      <h2>Recently Added </h2>
        <% @products.createdNew.each do |product| %>
          <div class="productDiv">
            <%= product.name%> <%= link_to "click for more details", product_path(product) %>
          </div>
        <% end %>
    </div>

    <div class="col-lg-4">
      <h2>Most Reviewed</h2>
        <% @products.mostReviews.each do |product| %>
          <div class="productDiv">
            <%= product.name%> <%= link_to "click for more details", product_path(product)%><br>Number of reviews:<%= product.reviews.length%>
          </div>
        <% end %>
    </div>
  </div>

